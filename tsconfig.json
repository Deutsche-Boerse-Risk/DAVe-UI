{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es6",
            "dom"
        ],
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true
    },
    "include": [
        "app/**/*.spec.ts"
    ],
    "files": [
        "app/app.module.ts",
        "app/main.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}